<%

asset.script(['chimera/mediafield'], {block: 'head'});
asset.style(['chimera/mediafield'], {block: 'head'});

start('wrapper') %>
<div class="form-group mediafieldgroup">
	<label for="<%= item.id %>" class="col-sm-2 control-label"><%= item.title %></label>
	<div class="col-sm-10 controls">
		<!--INPUT-->
	</div>
</div>
<% end('wrapper') %>

<% start('input') %>
<input data-emit="mediafield" type="hidden" name="<%= item.fullPath %>" value="<%= item.value || '' %>" id="<%= item.id %>" <% if(item.readonly===true){ %> readonly <% } %>>
<% end('input') %>